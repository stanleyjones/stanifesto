{{> header }}
	<article>
		<header>
			<time datetime="{{ date }}">{{ dateFormat date }}</time>
			<h1>{{{ title }}}</h1>
      {{#if source}}
      <h2>This post was originally published on <b>{{{source}}}</b>.</h2>
      {{/if}}
		</header>
		<section>
			{{{ contents }}}
		</section>
	</article>
{{> footer }}
