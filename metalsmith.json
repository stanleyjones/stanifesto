{
  "source": "source",
  "destination": "public",
  "metadata": {
    "site": {
      "author": "Stanley Jones",
      "title": "The Stanifesto",
      "url": "http://stanifesto.com/"
    }
  },
  "plugins": {
    "metalsmith-collections": {
      "posts": {
        "pattern": "posts/*.md",
        "reverse": true,
        "sortBy": "date"
      }
    },
    "metalsmith-feed": {
      "collection": "posts"
    },
    "metalsmith-register-helpers": {
      "directory": "templates/helpers"
    },
    "metalsmith-in-place": {
      "engine": "handlebars",
      "rename": true,
      "pattern": "*.md"
    },
    "metalsmith-markdown": true,
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-layouts": {
      "engine": "handlebars",
      "directory": "templates",
      "partials": "templates/partials"
    }
  }
}
